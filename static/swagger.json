{
  "openapi": "3.0.0",
  "info": {
    "description": "Institute For the Future",
    "version": "1.0.0",
    "title": "Action Panel for BBF",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Control",
      "description": "API for Control panel"
    }
  ],
  "paths": {
    "/request/{network}/status": {
      "get": {
        "tags": [
          "Control"
        ],
        "parameters":[{
          "in": "path",
          "name":"network",         
          "required": true,
           "description": "Choose the prefered Blockchain Network",
           "schema":{"$ref":"#/components/schemas/network"}  
        }],
        "summary": "Returns Nodes that are active for the current network",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Array"
            }
          }
        }
      }
    },
    
      "/request/{network}/start": {
      "post": {
        "tags": [
          "Control"
        ],
        "parameters":[{
          "in": "path",
          "name":"network",         
          "required": true,
           "description": "Choose the prefered Blockchain Network",
           "schema":{"$ref":"#/components/schemas/network"}  
        }],
        "summary": "Start new network",
        
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "OK Started",
            "schema": {
              "$ref": "#/components/schemas/Array"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },
    "/request/{network}/configure": {
      "put": {
        "summary": "Configure 10 nodes",
        "tags": [
          "Control"
        ],
         "parameters":[{
          "in": "path",
          "name":"network",         
          "required": true,
           "description": "Choose the prefered Blockchain Network",
           "schema":{"$ref":"#/components/schemas/network"}  
        }],
        
        "produces": [
          "string"
        ],
        "responses": {
          "200": {
            "description": "OK Configured",
            "schema": {
              "$ref": "#/components/schemas/Array"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },
    "/request/{network}/stop": {
      "delete": {
        "summary": "Stop the network and nodes",
        "tags": [
          "Control"
        ],
        
        "parameters":[{
          "in": "path",
          "name":"network",         
          "required": true,
           "description": "Choose the prefered Blockchain Network",
           "schema":{"$ref":"#/components/schemas/network"}  
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "204": {
            "description": "OK Stoped",
            "schema": {
              "$ref": "#/components/schemas/Array"
            }
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Book Request not found."
          }
        }
      }
    },
    "/request/{network}/clean": {
      "delete": {
        "summary": "Clean the network and nodes",
        "tags": [
          "Control"
        ],
        
        "parameters":[{
          "in": "path",
          "name":"network",         
          "required": true,
           "description": "Choose the prefered Blockchain Network",
           "schema":{"$ref":"#/components/schemas/network"}  
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "204": {
            "description": "OK Cleaned",
            "schema": {
              "$ref": "#/components/schemas/Array"
            }
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Book Request not found."
          }
        }
      }
    },
  
  "/request/{network}/mon": {
    "get": {
      "tags": [
        "Monitoring"
      ],
      "parameters":[{
        "in": "path",
        "name":"network",         
        "required": true,
         "description": "Choose the prefered Blockchain Network",
         "schema":{"$ref":"#/components/schemas/network"}  
      }],
      "summary": "Returns Monitoring logs for configure action",
      "responses": {
        "200": {
          "description": "OK",
          "schema": {
            "$ref": "#/components/schemas/Array"
          }
        }
      }
    },
    "post": {
      "tags": [
        "Monitoring"
      ],
      "parameters":[{
        "in": "path",
        "name":"network",         
        "required": true,
         "description": "Choose the prefered Blockchain Network",
         "schema":{"$ref":"#/components/schemas/network"}  
      }],
      "summary": "Returns Monitoring logs for start action",
      "responses": {
        "200": {
          "description": "OK",
          "schema": {
            "$ref": "#/components/schemas/Array"
          }
        }
      }
    },
    "delete": {
      "summary": "Stop Monitoring",
      "tags": [
        "Monitoring"
      ],
      
      "parameters":[{
        "in": "path",
        "name":"network",         
        "required": true,
         "description": "Choose the prefered Blockchain Network",
         "schema":{"$ref":"#/components/schemas/network"}  
      }],
      "produces": [
        "application/json"
      ],
      "responses": {
        "204": {
          "description": "OK stoped",
          "schema": {
            "$ref": "#/components/schemas/Array"
          }
        },
        "400": {
          "description": "Failed. Misunderstood Request."
        },
        "404": {
          "description": "Failed. Book Request not found."
        }
      }
    }
  },

"/request/{network}/traffic": {
 
    "get": {
      "tags": [
        "Traffc Generator"
      ],
      "parameters":[{
        "in": "path",
        "name":"network",         
        "required": true,
         "description": "Choose the prefered Blockchain Network",
         "schema":{"$ref":"#/components/schemas/network"}  
      }],
      "summary": "Returns Traffic log",
      "responses": {
        "200": {
          "description": "OK",
          "schema": {
            "$ref": "#/components/schemas/Array"
          }
        }
      }
    }
},

"/request/{network}/node": {
  "get": {
    "tags": [
      "Node Information"
    ],
    "parameters":[{
      "in": "path",
      "name":"network",         
      "required": true,
       "description": "Choose the prefered Blockchain Network",
       "schema":{"$ref":"#/components/schemas/network"}  
    }],
    "summary": "Returns Node logs",
    "responses": {
      "200": {
        "description": "OK",
        "schema": {
          "$ref": "#/components/schemas/Array"
        }
      }
    }
  }
}
},
  "components": {
    "schemas": {
      "network": {
        "type":"string",
        "properties":{
          "type":"string",
          "format":"string"  }       
      },
      "Array": {
        "type": "array",
        "items": {
          "type": "string"
          }
        }
      }
    
  }
}
